<% layout("/layouts/boilerplate") -%>
    <%# to get the rendered file %>
        <div class="row mt-3">
            <div class="col-8 offset-2">


                <h3>Edit this listing</h3>
                <form method="post" action="/listings/<%=listings._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listings[title]" value="<%=listings.title%>" type="text" class="form-control" required>
                         <div class="valid-feedback">
                                Looks good!
                            </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label"> Description</label>
                        <textarea name="listings[description]" type="text"
                            class="form-control" required><%=listings.description %></textarea>
                              <div class="invalid-feedback">Please enter a short description</div>
                    </div>

                    <div>
                        
                        <p> Image of your listing:</p>
                        <img src="<%= originalImageUrl %>">
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">  Upload New Image </label>
                        <input name="listings[image]"  type="file" class="form-control" >
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listings[price]" value="<%=listings.price%>" type="number"
                                class="form-control" required>
                                 <div class="invalid-feedback">Price should be valid</div>
                        </div>

                        <div class="mb-3 col-md-4">
                            <label for="country" class="form-label">Country</label>
                            <input name="listings[location]" value="<%=listings.location %>" type="text"
                                class="form-control" required>
                                 <div class="invalid-feedback">country name should be valid</div>
                        </div>
                    </div>



                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input name="listings[country]" value="<%=listings.country %>" type="text" class="form-control" required>
                    </div>

                    <button class="btn btn-dark edit-btn mt-5">Edit </button>
                </form>
            </div>
        </div>